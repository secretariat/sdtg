<div class="page">
  <div class="page-region-content">
		<div class="row">
			<center>
        <h3>Редактировать рубрику "Контакты"</h3>
        <%= link_to "Создать", {:controller => "contacts", :action => "new"}, :class=>"button big bg-color-blueDark", :style => "height: 10px; color: white;" %>
      </center>
			<table class="bordered">
			<thead>
        <tr>
          <th><center><b>№</b></center></th>
          <th><center><b>Должность</b></center></th>
          <th><center><b>ФИО</b></center></th>
        </tr>
      </thead>
      <% @contact.each do |f|  %>
      	<tr>
      		<td><center><%= f.id %>.</center></td>
      		<td><%= f.rank %></td>
      		<td><center><%= f.fio%></center></td>
      		<td><center>
              <%= link_to( "Показать",  :controller => 'contacts', :action=>'show', :id => f.id ) %></center>
            </td>
            <td border="1"><center>
              <%= link_to( "Редактировать", :controller => 'contacts', :action=>'edit',:id => f.id ) %></center>
            </td>
      	</tr>
    	<% end %>
    	</table>
			
		</div>
	</div>
</div>
