<div class="page-sidebar" style="width:225px;">
    <ul style="overflow: visible;">
        <li class="sticker sticker-color-blueDark" style="font-size:10pt;">
            <%= link_to "Частые вопросы", :controller => "page", :action => 'faq' %>
        </li>
        <li class="sticker sticker-color-blue"style="font-size:10pt;"><a href="#">Нормативно-правовые акты</a></li>
        <li class="sticker sticker-color-green" style="font-size:10pt;"><a href="#">Наши представители</a></li>
    </ul>
</div>
<div class="page-region">
    <div class="page-region-content">
        <div class="grid">
            <h2>Частые вопросы</h2>
            <div class="row">
                <div class="span7" style="align: justify;"> 
                    
                    <% @faqs.each do |f|%>    
                        <b>Вопрос:</b><%= f.quest %><br/>
                        <b>Ответ:</b><%= f.answer %><br/>
                        <br/>
                    <% end %>    
                    
                </div>   
               
            </div>
            <br>
            <div class="row">
                <center>
                <%= link_to "Задать вопрос", 
                    {:controller => "ask", :action => "new"}, :class=>"button big bg-color-blueDark", :style => "height: 10px; color: white;" %>
                </center>
                <br>
            </div>
        </div>
    </div>
</div>