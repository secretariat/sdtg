<%= form_tag( 'http://z.dtg.kiev.ua/main/attempt_login' ) do %>
	<div class="grid">
		<h4>Вход для парнеров</h4>
		<div class="row">
			<div class="span1"><h5>Логин:</h5></div>
			<div class="input-control text span3">
		 		<%= text_field_tag :login, params[:login]%>
		 	</div>
		</div>

		<div class="row">
			<div class="span1"><h5>Пароль:</h5></div>
		 	<div class="input-control select span3">
		 		<%= password_field_tag :hash_pass, params[:hash_pass] %>
		 	</div>
 	</div>
 	<div>
		<%= submit_tag "Вход"%>
	</div>
<% end %>