    <div class="page-region-content">
        <h2><%= t 'addinfo.title' %></h2>
        <div class="row">
            <div class="span5">
                <p align="justify">
                    <%= t 'addinfo.text' %>
                </p>
            </div>
            <div class="span4 pull-right" style="overflow:hidden;">
                <%= link_to (image_tag "railroad.jpg"), "/images/railroad_big.jpg", :target => "_blank" %>
