						<li><%= link_to "Контакты", :controller => "contacts", :action => "list" %></li>
					</ul>		
				</li>
				<li><%= link_to "Просмотр сайта", "/", :target => "_blanc"  %>		
				</li>
				<li data-role="dropdown" class="place-right">
					<a href="#" style="padding:5px;"><%= session[:login] %></a>
					<ul class="dropdown-menu">
						<li><a href="/admin/logout">Выйти</a></li>
					</ul>		
				</li>
				
			</ul>
		</div>
	</div>
	
	<%= yield %>

	<script src="/js/dropdown.js"></script>
	<script src="/js/carousel.js"></script>
	<script src="/js/accordion.js"></script>
