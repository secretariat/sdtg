<div class="page">
  <div class="page-region-content">
		<div class="row">
			<center>
				<h2>
					Редактирование "Кода товара"
				</h2>
			</center>
			<div class="row">
				<div class="span11">
					<br/>
					<br/>
					<center>
						<%= form_for( @code, :url => {:action => 'update', :id => @code.id} ) do |f| %>
							<div class="input-control text span4 offset2">
						 		<%= f.text_field :name %>
						 	</div>
						 	
						 	<%= f.select :lang, { "RU" => "ru", "EN" => "en"} %>
					 		<br/>
					 		<br/>
					 		<br/>
					 		<br/>
							<%= submit_tag "Сохранить", class: "default" %>
              <%= link_to "Отмена", {:controller => "code", :action => "list"}, :class=>"button big bg-color-blueDark", :style => "color: white;" %>
						<% end  %>
					</center>
				</div>
			</div>
		</div>
	</div>
</div>
