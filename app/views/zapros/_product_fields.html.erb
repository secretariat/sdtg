<table cellpadding='0' class="span10" id="tabled">
	<tr style="background: #E8E8E8;">
		<td style="width: 497px;"><%= t 'zapros.prod_name' %>*</td>
		<td colspan="2">
			<div class="input-control text span4" style="width: 281px;">
 				<%= f.text_field :naim, :style => "margin-bottom: -10px;" %>
 			</div>
 		</td>
 	</tr>
 	<tbody id="infofields">
		<tr style="background: #E8E8E8;">
			<td><%= t 'zapros.prod_code' %>*</td>
			<td class="span2">
				<div class="input-control text span2">
	 				<%= f.text_field :code_num, :style => "margin-bottom: -10px;" %>
	 			</div>
	 		</td>
	 		<td class="span2">
	 			<div class="input-control text span2" style="margin-bottom: -1px;">
	 				<%= f.select( :code, @code.collect{ |u| [u.name] }, :class => "input-control select") %>
	 			</div>
	 		</td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td><%= t 'zapros.kol_tov' %>*</td>
			<td colspan="2">
				<div class="input-control text span4"  style="width: 281px;" >
	 				<%= f.text_field :koltov, :style => "margin-bottom: -10px;" %>
	 			</div>
			</td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td>1) <%= t 'zapros.basic' %></td>
			<td>
				<div class="input-control text span2">
	 				<%= f.text_field :base_ed, :style => "margin-bottom: -10px;" %>
	 			</div>
			</td>
			<td>
				<div class="input-control select span2" style="margin-bottom: -1px;">
			 		<%= f.select(:dop_ed_name, @edizms.collect{ |u| [u.name] }) %>
			 	</div>
			</td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td>2) <%= t 'zapros.addit' %></td>
			<td colspan="2">
				<div class="input-control text span4"  style="width: 281px;" >
	 				<%= f.text_field :dop_ed, :style => "margin-bottom: -10px;" %>
	 			</div>
			</td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td><%= t 'zapros.price' %>*</td>
			<td>
				<div class="input-control text span2" style="margin-bottom: -1px;">
	 				<%= f.select(:stoim, Currency.where(:lang => session[:lang]).collect{ |u| [u.name] }, :class => "input-control select")%>
	 			</div>
			</td>
			<td border="0px">
				<div class="input-control text span2" style="margin-bottom: -1px;">
			 		<%= f.text_field :another_currency %>
			 	</div>
		 </td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td>1) <%= t 'zapros.price_per_one'%></td>
			<td colspan="2">
				<div class="input-control text span4"  style="width: 281px;" >
	 				<%= f.text_field :ed, :style => "margin-bottom: -10px;" %>
	 			</div>
			</td>
		</tr>
		<tr style="background: #E8E8E8;">
			<td>2) <%= t 'zapros.price_all' %></td>
			<td colspan="2">
				<div class="input-control text span4"  style="width: 281px;" >
	 				<%= f.text_field :total, :style => "margin-bottom: -10px;" %>
	 			</div>
			</td>
		</tr>
	</tbody>
	<tr>
		<td colspan="3">
			<div align="right">
				<%= f.hidden_field :_destroy %>
				<%= link_to "Удалить", '#', :class => "remove_fields" %> |
				<%= link_to "Скрыть", "#", :class => "hider" %> |
				<%= link_to "Показать", "#", :class => "shower" %>
			</div>
		</td>
	</tr>
</table>
