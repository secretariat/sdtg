<div class="page">
  <div class="page-region-content">
    <div class="row">
      <center>
        <h3>Редактировать рубрику "Единицы измерения"</h3>
        <%= link_to "Создать", {:controller => "edizms", :action => "new"}, :class=>"button big bg-color-blueDark", :style => "height: 10px; color: white;" %>
      </center>
      <table class="bordered">
      <thead>
        <tr>
          <th><center><b>№</b></center></th>
          <th><center><b>Единицы</b></center></th>
          <th><center><b>Создан</b></center></th>
          <th><center><b>Опубликован</b></center></th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <% @edizms.each do |f|  %>
        <tr>
          <td><center><%= f.id %>.</center></td>
          <td><%= f.name %></td>
          <td><center><%= f.created_at%></center></td>
          <td><center><%= status(f.visible)%></center></td>
          <td>
            <center>
              <%= link_to( "Показать",  :controller => 'edizms', :action=>'show', :id => f.id ) %>
            </center>
          </td>
          <td><center>
            <%= link_to( "Редактировать", :controller => 'edizms', :action=>'edit',:id => f.id ) %></center>
          </td>
        </tr>
      <% end %>
      </table>
    </div>
  </div>
</div>
